<!-- NavBar Estudiante -->
<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">LudoLab ConnectSys Frontend</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu"> 

        <div class="nav-item px-3">
            <a class="nav-link" href="#" @onclick="ToggleEstudiantesMenu">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Estudiantes
            </a>
            @if (isEstudiantesMenuVisible)
            {
                <div class="sub-menu">
                    <NavLink class="nav-link" href="estudiantes">Todos</NavLink>
                </div>
               /* <div class="sub-menu">
                    <NavLink class="nav-link" href="crear-estudiante">Inscripcion</NavLink>
                </div>*/
            }
        </div>
    <div class="nav-item px-3">
        <NavLink class="nav-link" href="encuesta-estudiante">
            <span class="bi bi-file-earmark-text" aria-hidden="true"></span> Encuestas
        </NavLink>
    </div>
    
</div>


@code {
    private bool collapseNavMenu = false;
    private bool isEstudiantesMenuVisible = false;
    private bool isCursosMenuVisible = false;
    private bool isCertificateMenuVisible = false;
    private bool isRepositorioMenuVisible = false;
    private bool isUsuariosMenuVisible = false;
    private bool isInstructoresMenuVisible = false;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private void ToggleEstudiantesMenu()
    {
        isEstudiantesMenuVisible = !isEstudiantesMenuVisible;
    }


}
