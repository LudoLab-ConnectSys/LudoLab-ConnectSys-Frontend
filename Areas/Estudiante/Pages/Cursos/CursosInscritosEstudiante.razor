@page "/grupos-del-estudiante"
@layout EstudianteLayout
@inject HttpClient Http
@inject IJSRuntime Js
@inject NavigationManager Navigation

<h3>Grupos Inscritos del Estudiante</h3>

@if (gruposDelEstudiante == null)
{
    <p>Cargando grupos...</p>
}
else if (gruposDelEstudiante.Count == 0)
{
    <p>No hay grupos inscritos.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Nombre del Grupo</th>
                <th>Periodo</th>
                <th>Fecha Inicio</th>
                <th>Fecha Fin</th>
                <th>Curso</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var grupo in gruposDelEstudiante)
            {
                <tr>
                    <td>@grupo.nombre_curso</td>
                    <td>@grupo.nombre_grupo</td>
                    <td>@grupo.nombre_periodo</td>
                    <td>@grupo.fecha_inicio_periodo</td>
                    <td>@grupo.fecha_fin_periodo</td>
                    <td>
                        <button class="btn btn-primary" @onclick="() => VerDetallesGrupo(grupo.id_grupo)">Ver Detalles</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<GrupoConCursoPeriodo> gruposDelEstudiante;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var idEstudianteString = await Js.InvokeAsync<string>("localStorage.getItem", "IdEstudiante");
            if (int.TryParse(idEstudianteString, out int idEstudiante))
            {
                await CargarGrupos(idEstudiante);
            }
            else
            {
                Console.WriteLine("No se pudo obtener el ID del estudiante");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al obtener el ID del estudiante del local storage: {ex.Message}");
        }
    }

    private async Task CargarGrupos(int estudianteId)
    {
        gruposDelEstudiante = await Http.GetFromJsonAsync<List<GrupoConCursoPeriodo>>($"http://localhost:5117/api/Grupo/GruposDelEstudiante/{estudianteId}");
    }

    private void VerDetallesGrupo(int grupoId)
    {
        Navigation.NavigateTo($"/detalles-grupo-estudiante/{grupoId}");
    }
}
